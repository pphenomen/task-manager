    font-size: 1.3rem;
    font-weight: bold;
    padding: 14px 28px;
    border-radius: 10px;
    border: 2px solid #0056b3;
    color: #ffffff;
    background-color: #0056b3;
    transition: all 0.3s ease-in-out;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0px 4px 10px rgba(0, 86, 179, 0.3);
  }

  .nav-button:hover {
    background-color: #003f7f;
    border-color: #003f7f;
    transform: scale(1.1);
    box-shadow: 0px 6px 15px rgba(0, 86, 179, 0.5);
  }

  /* –ö–Ω–æ–ø–∫–∞ "–ù–∞—á–∞—Ç—å" */
  .scroll-button {
    background-color: #0056b3;
    color: white;
    padding: 12px 30px;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .scroll-button:hover {
    background-color: #0056b3;
    transform: scale(1.1);
  }

  /* –ö–Ω–æ–ø–∫–∞ "–ù–∞–≤–µ—Ä—Ö" */
  .scroll-to-top {
    display: none;
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: #0056b3;
    color: white;
    border: none;
    padding: 2px 20px;
    border-radius: 15px;
    font-size: 2.5rem;
    cursor: pointer;
