                  <% if attr == "due_date" %>
                    <%= task.formatted_due_date %>
                  <% elsif attr == "project_id" %>
                    <%= task.project_name %>
                  <% elsif attr == "assignee_id" %>
                    <%= task.assignee_name %>
                  <% else %>
                    <%= task.send(attr) %>
