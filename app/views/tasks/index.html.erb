<div class="tasks-section py-5">
  <div class="container">
    <div class="card shadow-sm border-0 p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">–ó–∞–¥–∞—á–∏</h1>
        <%= link_to "–î–æ–±–∞–≤–∏—Ç—å –∑–∞–¥–∞—á—É", new_task_path, class: "btn btn-primary btn-lg" %>
      </div>

      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>‚Ññ</th>
            <% model_class = Task %>
            <% model_attributes = model_class.column_names - ["id", "created_at", "updated_at"] %>

            <% model_attributes.each do |attr| %>
              <% if attr == "status" %>
                <th style="width: 120px;"><%= model_class.column_names_rus[attr] %></th>
              <% else %>
                <th><%= model_class.column_names_rus[attr] %></th>
              <% end %>
            <% end %>
            <th class="text-center" style="width: 150px;">–î–µ–π—Å—Ç–≤–∏—è</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each_with_index do |task, index| %>
            <tr>
              <td><%= (@current_page - 1) * 5 + index + 1 %></td>
              <% model_attributes.each do |attr| %>
                <td>
                  <% if attr == "due_date" %>
                    <%= task.formatted_due_date %>
                  <% elsif attr == "project_id" %>
                    <%= task.project_name %>
                  <% elsif attr == "assignee_id" %>
                    <%= task.assignee_name %>
                  <% elsif attr == "status" %>
                    <%= task.current_status %>
                  <% else %>
                    <%= task.send(attr) %>
                  <% end %>
                </td>
              <% end %>
              <td class="text-center">
                <%= form_with url: edit_task_path(task), method: :get, local: true, class: "d-inline" do %>
                  <%= button_to "‚úèÔ∏è", edit_task_path(task), method: :get, class: "btn btn-outline-light btn-sm me-2" %>
                <% end %>
                <%= form_with url: task_path(task), method: :delete, local: true, class: "d-inline" do %>
                  <%= button_to "üóë", task_path(task), method: :delete, data: { confirm: "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–¥–∞—á—É?" }, class: "btn btn-outline-light btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- –ü–∞–≥–∏–Ω–∞—Ü–∏—è -->
    <div class="d-flex justify-content-center mt-4">
      <% if @current_page > 1 %>
        <%= link_to "–ü—Ä–µ–¥—ã–¥—É—â–∞—è", tasks_path(page: @current_page - 1), class: "btn btn-outline-secondary me-2" %>
      <% end %>

      <% (1..@total_pages).each do |page| %>
        <%= link_to page, tasks_path(page: page), class: "btn btn-primary me-2 #{'active' if page == @current_page}" %>
      <% end %>

      <% if @current_page < @total_pages %>
        <%= link_to "–°–ª–µ–¥—É—é—â–∞—è", tasks_path(page: @current_page + 1), class: "btn btn-outline-secondary" %>
      <% end %>
    </div>

    <!-- –ö–Ω–æ–ø–∫–∞ –≤–æ–∑–≤—Ä–∞—Ç–∞ –∫ —Ä–∞–∑–¥–µ–ª–∞–º -->
    <div class="text-center mt-4">
