<h1>Редактировать пользователя</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :name, 'Имя' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, 'Электронная почта' %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.submit 'Обновить' %>
  </div>
<% end %>

<%= link_to 'Назад', users_path %>
